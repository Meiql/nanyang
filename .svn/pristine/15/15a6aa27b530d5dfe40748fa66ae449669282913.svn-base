<!-- 员工基本信息 -->
<#macro userbaseInfo>

													<table  width="100%" class="Table4">
																<tr><td colspan="3">&nbsp;</td></tr>
																<tr>
																	<td>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<font color="red">*</font>姓名：
																	<select id="user" name="user" class="nolayer"   datatype="*" nullmsg="角不能为空"   data-placeholder="请选择用户" >
																	<#if userList ??>
																		<option value="">--请选择--</option>
																		<#list userList as user>
																			<option value="${(user.id)!''}" >${(user.name)!''}&nbsp;(${(user.account)!''})</option>	
																		</#list>
																	</#if>	
																	</select>
																	</td>
																	<td>
																	<label class="layui-form-label">工号：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="workno" id="workno" readonly="readonly" value="${(returnDatas.data.jobNumber)!''}" class="layui-input"/>
																		</div>
																	</td>
																</tr>
																<tr><td colspan="2">&nbsp;</td></tr>
																<tr>
																	<td>
																		<label class="layui-form-label">岗位：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="gangwei" id="gangwei" readonly="readonly" value="${(returnDatas.data.dutyTypeName)!''}"  class="layui-input"/>
																		</div>
																	</td>
																	<td>
																	<label class="layui-form-label">身份证号：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="cardId" id="cardId"  readonly="readonly" value="${(returnDatas.data.cardId)!''}" class="layui-input"/>
																		</div>
																	</td>	
																</tr>
																<tr><td colspan="2">&nbsp;</td></tr>
																<tr>
																	<td>
																	<label class="layui-form-label">基本工资：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="jibenpay" id="jibenpay"  readonly="readonly"  value="${(returnDatas.data.gongjijinaccount)!''}" class="layui-input"/>
																		</div>
																	</td>
																	<td>
																		<label class="layui-form-label">考核工资：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="kaohepay" id="kaohepay"   readonly="readonly" value="${(returnDatas.data.baoxianaccount)!''}" class="layui-input"/>
																		</div>
																	</td>	
																</tr>
																<tr><td colspan="2">&nbsp;</td></tr>
																<tr>
																	<td>
																		<label class="layui-form-label">岗位工资：*</label>
																		<div class="layui-inline col-lg-5">  
																			<input type="text" name="gangweipay" id="gangweipay"   readonly="readonly" value="${(returnDatas.data.baoxianaccount)!''}" class="layui-input"/>
																		</div>
																	</td>			
																	<td>
																		<label class="layui-form-label">公司名称：*</label>
																		<div class="layui-inline col-lg-5"> 
																		<input type="text" name="company" id="company"  readonly="readonly"  value="${(returnDatas.data.baoxianaccount)!''}" class="layui-input"/> 
																		</div>
																</td></tr>
																<tr><td colspan="2">&nbsp;</td></tr>
																<thead>
															</table>
		<hr/>
</#macro>
